= form_for @user do |f|
  - if @user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user.errors.count, "error")} prohibited this user from being saved:"
      %ul
        - @user.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :twitter_user_id
    = f.number_field :twitter_user_id
  .field
    = f.label :nickname
    = f.text_field :nickname
  .field
    = f.label :notes
    = f.text_field :notes
  .actions
    = f.submit 'Save'
